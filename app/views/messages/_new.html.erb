<div id="logo" style="padding:5px;margin-top:-10px;width:75px;background: #303050">
<%= render 'vq/vq_logo' %>
</div>
<%= form_for @message, url: contact_path, remote: true  do |f| %>
  <fieldset>
  <legend><h6> <%= t('contact_us.contacts.new.contact_us') %> </h6></legend>
    <div class="field">
      <%= f.text_field :name, placeholder: t('contact_us.contacts.new.name') , required: true %>
    </div>
    
    <div class="field">
      <%= f.email_field :email, placeholder: t('contact_us.contacts.new.email'), required: true %>
    </div>
    
    <div class="field">
      <%= f.text_field :subject, size:25, placeholder: "Subject" %>
    </div>

    <div class="field">
      <%= f.text_area :content, cols:35, rows:8, placeholder: t('contact_us.contacts.new.message'), required: true %>
    </div>
    <div class="field" style="float: right">
      <%= f.submit t('contact_us.contacts.new.submit') %>
    </div>
  </fieldset>
<% end %>
